h1 {{ lobby.name }}
div#chatWindow.chatWindow.plainBorder
  div(ng-repeat='message in messages')
    span(ng-show='message.name')
      strong {{ message.name }}
      | :
    |  {{ message.message }}
form#messageForm(ng-submit='sendMessage(lobby.messageField)')
  input#messageField.messageField(type='text', ng-model='lobby.messageField')
  input#messageSubmit(type='submit', value='Send')
button(ng-click="lobbyLeave()")
  | Leave Lobby
div#users
  h2 Users in this lobby:
  div(ng-repeat='user in lobby.users')
    | &bull; {{ user.name }}
